@using InvestmentPoint.Admin.Domain.Common
@model CustomerModel
@{
    ViewData["Title"] = "Add Customer";
    Layout = "~/Views/Shared/Master/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Customer</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Customer</a></li>
                    <li class="breadcrumb-item active">AddCustomer</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<form method="post">
    <div class="card-body">
        <div class="row">

            <div class="form-group col-md-6">
                    <label for="exampleInputName1" asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
            </div>

            <div class="form-group col-md-6">
                    <label for="exampleInputEmail1" asp-for="Email">Email</label>
                    <input type="text" asp-for="Email" class="form-control" id="exampleInputEmail1" placeholder="Email">
            </div>

            <div class="form-group col-md-6">
                <label for="exampleInputMobileNo1" asp-for="MobileNo">Mobile Number</label>
                <input type="text" asp-for="MobileNo" class="form-control" id="exampleInputMobileNo1" placeholder="Mobile No">
            </div>
            <div class="form-group col-md-6">
                <label for="exampleInputAadharNo1" asp-for="AadharNo">Aadhar Number</label>
                <input type="text" asp-for="AadharNo" class="form-control" id="exampleInputAadharNo1" placeholder="Aadhar No">
            </div>
            <div class="form-group col-md-6">
                <label for="exampleInputPanNo1" asp-for="PanNo">Pan Number</label>
                <input type="text" asp-for="PanNo" class="form-control" id="exampleInputPanNo1" placeholder="Pan No">
            </div>
            <div class="form-group col-md-6">
                <label for="exampleInputArea1" asp-for="Area">Area</label>
                <select name="Area" class="form-control" asp-items="@ViewBag.Area">
                    <option value="none">---Select Area---</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="exampleInputAddress1" asp-for="Address"></label>
                <input type="text" asp-for="Address" class="form-control" id="exampleInputAddress1" placeholder="Address">
            </div>
            <div class="form-group col-md-6">
                <label for="exampleInputMonthlyAmount1" asp-for="Amount">Denomination</label>
                <input type="text" asp-for="Amount" class="form-control" id="MonthlyA" placeholder="Denomination">
            </div>
            <div class="form-group col-md-6">
                <label for="exampleInputTypeOfInvestment1" asp-for="TypeOfInvestment">Type Of Investment</label>
                <select name="TypeOfInvestment" id="TypeOfI" class="form-control" asp-items="@ViewBag.Investment">
                    <option value="none">---Select Type Of Investment---</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="exampleInputCollectionAmount1" asp-for="CollectionAmount">Collection Amount</label>
                <input type="text" asp-for="CollectionAmount" class="form-control" id="CollectionAmo" placeholder="Collection Amount">
            </div>
            <div class="form-group col-md-6">
                <label for="exampleInputAccountNumber1" asp-for="AccountNumber">Account Number</label>
                <input type="text" asp-for="AccountNumber" class="form-control" id="exampleInputAccountNumber1" placeholder="Account Number">
            </div>
@*            <div class="form-group col-md-6">
                <label for="exampleInputTenure1" asp-for="Tenure">Tenure</label>
                <input type="text" asp-for="Tenure" class="form-control" id="exampleInputTenure1" placeholder="Tenure">
            </div>*@
            <div class="form-group col-md-6">
                <label for="exampleInputCodeNo1" asp-for="CodeNo">Code Number</label>
                <input type="text" asp-for="CodeNo" class="form-control" id="exampleInputCodeNo1" placeholder="Code Number">
            </div>
            <div class="form-group col-md-6">
                <label for="exampleInputCardNo1" asp-for="CardNo">Card Number</label>
                <input type="text" asp-for="CardNo" class="form-control" id="exampleInputCardNo1" placeholder="Card Number">
            </div>
            <div class="form-group col-md-6">
                <label for="exampleInputOpenDate1" asp-for="OpenDate">Date Of Opening</label>
                <input type="date" asp-for="OpenDate" class="form-control" id="exampleInputOpenDate1" placeholder="Open Date">
            </div>
            <div class="form-group col-md-6">
                <label for="exampleInputPassword1" asp-for="Password"></label>
                <input type="Password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
        </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

